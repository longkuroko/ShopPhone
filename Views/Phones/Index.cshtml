@using ShopPhone.Models.PhoneModel
@using PagedList.Mvc;
@model PagedList.PagedList<Phone>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}

<section class="py-5 body_shop">
    <div class="container px-4 px-lg-5 mt-5">

        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">          
            <div class="col-4">  
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="../Shop/shop.html">OPPO</a>
                    <a class="dropdown-item" href="../Shop/shop.html">APPLE</a>
                    <a class="dropdown-item" href="../Shop/shop.html">ASUS</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="../Shop/shop.html">CÁC DÒNG MÁY KHÁC</a>
                </div>
            </div>
            <div class="col-8">
               
                <div class="row mb-5">
                    @foreach (var item in Model)
                    {
                        <div class="col-4">
                            <div class="card h-100">

                                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                                <a href="../Product/product..html">

                                    <a href="/Phones/Details/@item.Id"><img class="card-img-top" src="/@item.Image" alt="..." /></a>

                                </a>
                                <div class="card-body p-4">
                                    <div class="text-center">

                                        <h5 class="fw-bolder">@item.Name</h5>

                                        <div class="d-flex justify-content-center small text-warning mb-2">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>

                                        <span class="text-muted text-decoration-line-through">@item.Price</span>
                                    </div>
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center"><a class="btn btn-outline-dark" href="/ShopingCart/AddToCart/@item.Id">Add to cart</a></div>
                                    </div>
                                </div>

                               
                            </div>
                        </div>
                    }
                    </div>
             
            </div>
        </div>
        <div class="text-center page_shop">
            <div class="page">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
        </div>
    </div>
</section>